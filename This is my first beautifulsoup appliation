      "source": [
        "import pandas as pd\n",
        "import requests\n",
        "from bs4 import BeautifulSoup\n",
        "from requests.adapters import HTTPAdapter\n",
        "from urllib3.util.retry import Retry\n",
        "\n",
        "#prompt user to input job title\n",
        "name_of_job = input(\"Enter the name of the job that you seek for: \").strip()\n",
        "search_term = name_of_job.lower().replace(' ' , '-')\n",
        "#get link\n",
        "url = f'https://www.careerjunction.co.za/jobs/{search_term}'\n",
        "\n",
        "print(f'Fetching results from: {url}')\n",
        "\n",
        "#retry setup\n",
        "retry_strategy = Retry(total=3, backoff_factor=1, status_forcelist=[429, 500, 502, 503, 504])\n",
        "adapter = HTTPAdapter(max_retries=retry_strategy)\n",
        "http = requests.Session()\n",
        "http.mount(\"https://\", adapter)\n",
        "http.mount(\"http://\", adapter)\n",
        "\n",
        "#make request\n",
        "try:\n",
        "   response= http.get(url, headers={'User-Agent' : 'Mozilla/5.0 (Winows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/122.0.0.0 Safari/537.36'} ,timeout=30)\n",
        "   response.raise_for_status()\n",
        "\n",
        "   # Move the code that uses 'response' inside the try block\n",
        "   soup = BeautifulSoup(response.content, 'html.parser')\n",
        "\n",
        "   #get the job cards\n",
        "   title_of_job =soup.find_all('a', attrs={'jobid' : True})\n",
        "   overviews = soup.find_all('ul', class_='job-overview')\n",
        "\n",
        "   print(f'found{len(title_of_job)} job titles and {len(overviews)} overviews')\n",
        "   jobs_list = []\n",
        "   for x in range(min(len(title_of_job), len(overviews))):\n",
        "     # Check if the current job title element has an 'href' attribute\n",
        "     if 'href' in title_of_job[x].attrs:\n",
        "       title = title_of_job[x].text.strip()\n",
        "       link = 'https://www.careerjunction.co.za' + title_of_job[x]['href']\n",
        "       overview = overviews[x]\n",
        "\n",
        "       salary= overview.find('li' , class_='salary')\n",
        "       position = overview.find('li' , class_= 'position')\n",
        "       location = overview.find('li' , class_='location')\n",
        "       posted = overview.find('li' , class_='updated-time')\n",
        "\n",
        "        #adding to list\n",
        "       jobs_list.append({\n",
        "         'Title' : title,\n",
        "         'Recruiter' : 'N/A',\n",
        "         'Salary' : salary.text.strip() if salary else 'N/A',\n",
        "         'position' : position.text.strip() if position else 'N/A',\n",
        "         'location' : location.text.strip() if location else 'N/A',\n",
        "         'posted_date' : posted.text.strip() if posted else 'N/A'\n",
        "       })\n",
        "     else:\n",
        "         # Optionally, print a message or log that a job title was skipped due to no href\n",
        "         print(f\"Skipping a job title element because it has no 'href' attribute: {title_of_job[x]}\")\n",
        "#creating the new dataframe for each result found\n",
        "   data = pd.DataFrame(jobs_list)\n",
        "   Filename = f'{search_term}_job-results.csv'\n",
        "   data.to_csv(Filename, index= False)\n",
        "   print(f'Successfully scraped {len(data)} jobs. Results saved to {Filename}')\n",
        "   print ('\\nSample of scraped data: ')\n",
        "   print(data.head())\n",
        "\n",
        "#This handles the errors\n",
        "except requests.exceptions.RequestException as e:\n",
        "   print(f'Error fetching data: {e}')\n",
        "   exit()"
      ],
