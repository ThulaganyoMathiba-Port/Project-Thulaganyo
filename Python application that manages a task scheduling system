    {
      "cell_type": "code",
      "source": [
        "#now we need to do the the very long class. this is scheduler class\n",
        "import os\n",
        "class Task_Scheduler:\n",
        "  def __init__(self):\n",
        "    self.task_list=[]#this is an empty list\n",
        "    #we need to have a standard filename here for simplicity\n",
        "    self.filename= 'scheduled_tasks.txt'\n",
        "\n",
        "  def add_task(self,task):#we need use the heapq function here\n",
        "    heapq.heappush(self.task_list, (task.date_due_, task))\n",
        "    print(f'The Task {task.task_description} has been added with P:{task.level_of_priority_}\\n')\n",
        "\n",
        "  def next_task(self):#this has to get us the next task\n",
        "    if self.task_list:\n",
        "      value_priority, task = heapq.heappop(self.task_list)\n",
        "      print(f'The next task is:')\n",
        "      print(task.displaying_info())\n",
        "      return task\n",
        "    else:\n",
        "      return print('TASK NOT AVAILABLE\\n')\n",
        "\n",
        "  #now we want to display the tasks organized\n",
        "  def task_printing(self):\n",
        "    #we want sort the tasks by priority\n",
        "    if not self.task_list:\n",
        "      return print('No tasks available\\n')\n",
        "    else:\n",
        "      print('Tasks by priority:\\n')\n",
        "      for level_of_priority, task in sorted(self.task_list):\n",
        "        print(f'{task}\\n')\n",
        "\n",
        "  def file_save(self, name_of_file): #so we want to write the tasks to a file\n",
        "    #we want all the tasks to a file that is a text\n",
        "    with open(name_of_file, 'w') as file:\n",
        "      file.write('Tasks by priority:\\n')\n",
        "      for level_of_priority, task in sorted(self.task_list):\n",
        "        file.write(f'{task.task_description}, {task.date_due_} , {task.level_of_priority_}, {task.time_estimated_}\\n')\n",
        "    print(f'Tasks saved to {name_of_file} file\\n')\n",
        "\n",
        "  #we want to able to read waht is written on the file\n",
        "  def file_read(self, name_of_file):\n",
        "    try:\n",
        "      with open(name_of_file, 'r') as file:\n",
        "        for line in file:\n",
        "          desc, date_due, level_of_priority, time_estimated = line.strip().split(',')\n",
        "          task = Task_class(desc, date_due, int(level_of_priority), float(time_estimated))\n",
        "          self.add_task(task)\n",
        "      print(f'Tasks loaded from {name_of_file} file\\n')\n",
        "    except FileNotFoundError:\n",
        "      print(f'File {name_of_file} not found\\n')\n",
        "\n",
        "#now we begin our main menu\n",
        "def main_menu():\n",
        "  scheduler = Task_Scheduler() # we need to get a object scheduler\n",
        "\n",
        "  #we will use a while loop\n",
        "  while True:\n",
        "    print('Task Scheduler Menu:')\n",
        "    print('1. Addition of A Task')\n",
        "    print('2. Next Task')\n",
        "    print('3. Display Tasks')\n",
        "    print('4. Saving A Task to File')\n",
        "    print('5. Load Tasks from File')\n",
        "    print('6. Exit')\n",
        "    print('-----------------------------------')\n",
        "\n",
        "    #let us give the user an option to enter their input number of what they want from the menu\n",
        "    decision = input('Enter your choice: ')\n",
        "\n",
        "    if decision == '1':\n",
        "      #add the information on the first task\n",
        "      desc = input('Enter the task description: ')\n",
        "      date_due = input('Enter the due date (YYYY-MM-DD): ')\n",
        "      level_of_priority = int(input('Enter the level of priority (1-5): '))\n",
        "      time_estimated = float(input('Enter the estimated time (hours): '))\n",
        "      task = Task_class(desc, date_due, level_of_priority, time_estimated)\n",
        "      scheduler.add_task(task)\n",
        "    elif decision == '2':\n",
        "      scheduler.next_task()\n",
        "\n",
        "    elif decision == '3':\n",
        "      scheduler.task_printing()\n",
        "\n",
        "    elif decision == '4':\n",
        "      name_of_file = input('Enter the name of the file to save tasks: ')\n",
        "      scheduler.file_save(name_of_file)\n",
        "\n",
        "    elif decision == '5':\n",
        "      name_of_file = input('Enter the name of the file to load tasks from: ')\n",
        "      scheduler.file_read(name_of_file)\n",
        "\n",
        "    elif decision == '6':\n",
        "      print('You are exiting the program.')\n",
        "      break\n",
        "    else:\n",
        "      print('Invalid choice. Please try again.\\n')\n",
        "\n",
        "if __name__ == '__main__':\n",
        "  main_menu()"
      ],
