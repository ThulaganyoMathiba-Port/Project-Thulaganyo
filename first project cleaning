      "source": [
        "import pandas as pd\n",
        "import numpy as np\n",
        "#placing in the dataset give wiithin the question:\n",
        "file = \"/content/Books_Data.csv\"\n",
        "try:\n",
        "  df = pd.read_csv(file ,sep=\";\")\n",
        "except Exception as e:\n",
        "  print(f\"The file {e} cannot be read\")\n",
        "  raise\n",
        "\n",
        "#the first thing instructions wants to check the dimension of the dataset\n",
        "print(df.shape)\n",
        "print(\"The above represents the dimension of the dataset as rows and columns\")\n",
        "\n",
        "\n",
        "\n",
        "#I need to use the standard naming convention for all COLUMNs(camelCases or _)\n",
        "df.columns = [column_name.strip().lower().replace(' ', '_') for column_name in df.columns]\n",
        "print(\"The column names are as follows: \" , df.columns) #to print the output of the naming conversion done in the above line\n",
        "\n",
        "#Now No NULLS!! must be present\n",
        "print(\"The values that are null in each column;\\n\", df.isnull().sum())\n",
        "\n",
        "df = df.fillna({\n",
        "    'author_rating': 'Beginner', #default for the author rating\n",
        "    'genre': 'Fiction', #default\n",
        "    'gross_sales' : df['gross_sales'].mean(), #place missing gross_sales with mean\n",
        "    'publishing_revenue' : 0\n",
        "})\n",
        "\n",
        "df = df.replace([np.inf, -np.inf], np.nan)\n",
        "df = df.dropna()\n",
        "#Years colums must conTAIN nO DECIMALS!!!! or any value that is wrong.\n",
        "#It will first convert the column of Year of float to an int as it will remove the decimals\n",
        "try:\n",
        "  df[\"publishing_year\"] = df[\"publishing_year\"].astype(float)\n",
        "  df = df[df[\"publishing_year\"].notna()]\n",
        "  df[\"publishing_year\"] = df[\"publishing_year\"].astype(int)\n",
        "  #now filter out the invalid years\n",
        "  years_invalid = df[~df[\"publishing_year\"].between(1000, 2100)]\n",
        "  df = df[df[\"publishing_year\"] .between(1000,2100)] #get rid of the -300/ 380 as a year with the correct range\n",
        "\n",
        "  #if not years_invalid.empty:\n",
        "    #print(f\"Years that are invalid that are removed:\\n\" , years_invalid[['book_name' ,'publishing_year']])\n",
        "except Exception as e:\n",
        "  print(f\"ERROR FOR: {e}\")\n",
        "\n",
        "#use a function to simplify the rating process\n",
        "#from beginner, intermediate and expert\n",
        "def author_ratings(rate_of_author):\n",
        "  rate_of_author = str(rate_of_author).lower() if pd.notna(rate_of_author) else ''\n",
        "  beginner_rate = [\"beginner\" , \"low\" , \"1\" ,\"2\"  \"novice\"]\n",
        "  intermediate_rate = [\"intermediate\", \"medium\", \"3\", \"4\", \"5\"]\n",
        "  expert_rate = [\"expert\", \"6\", \"7\", \"8\" , \"high\"]\n",
        "\n",
        "  if rate_of_author in beginner_rate:\n",
        "    return \"Beginner\"\n",
        "  elif rate_of_author in intermediate_rate:\n",
        "    return \"Intermediate\"\n",
        "  elif rate_of_author in expert_rate:\n",
        "    return \"Expert\"\n",
        "  else:\n",
        "    #print(f\"Not recognized: {rate_of_author}\")\n",
        "    return \"Beginner\"\n",
        "\n",
        "\n",
        "df[\"author_rating\"] = df[\"author_rating\"].apply(author_ratings)\n",
        "\n",
        "#print(df[\"author_rating\"].value_counts())\n",
        "#genre also simplified.\n",
        "\n",
        "type_of_genre = {\"fiction\", \"non-fiction\", \"children\"}\n",
        "#need to normalize the lower cases\n",
        "df[\"genre\"] = df[\"genre\"].str.lower().str.strip()\n",
        "#this is the tranformation\n",
        "df[\"genre\"] = df[\"genre\"].apply(lambda x: x.capitalize() if x in type_of_genre else \"Fiction\")\n",
        "#print(df[\"genre\"].value_counts())\n",
        "#The operation costs must be calculated using the given formula\n",
        "df[\"operating_cost\"] = df[\"gross_sales\"] - df[\"publisher_revenue\"]\n",
        "\n",
        "\n",
        "\n",
        "if 'gross_sales' in df.columns and 'publisher_revenue' in df.columns:\n",
        "    df['operating_cost'] = df['gross_sales'] - df['publisher_revenue']\n",
        "else:\n",
        "    print(\"Columns 'gross_sales' or 'publisher_revenue' not found in the DataFrame.\")\n",
        "\n",
        "#now 8th patr of the instructions requires us compute the average book rating for each\n",
        "#publisher, and the x^, Q2 and standard devationin gross sales\n",
        "each_publiser_average = df.groupby(\"publisher\")[\"book_ratings_count\"].mean() #call the functions\n",
        "gross_sale_mean = df[\"gross_sales\"].mean()\n",
        "median_of_gross_sale = df[\"gross_sales\"].median()\n",
        "gross_sale_standard_deviation = df[\"gross_sales\"].std()\n",
        "\n",
        "print(f\"The Standard Deviation of the Gross Sale is: {gross_sale_standard_deviation}\")\n",
        "print(f\"The Median of the Gross Sale is: {median_of_gross_sale}\")\n",
        "print(f\"The Mean of the Gross Sale is: {gross_sale_mean}\")\n",
        "\n",
        "#they will be displayed\n",
        "\n",
        "#ensure that the \"sale rank\" column is rempve from the dataset\n",
        "df = df.drop(columns=[\"sales_rank\"])\n",
        "\n",
        "#create the dataset of the top 10 book\n",
        "top_10_books = df[df[\"book_average_rating\"] >= 4].nlargest(10, \"book_average_rating\")[[\"book_name\" , \"author_rating\" , \"book_average_rating\"]]\n",
        "\n",
        "#save it!!\n",
        "df.to_csv(\"cleaned_books_data.csv\", index=False)\n",
        "top_10_books.to_csv(\"top_10_books.csv\", index=False)\n",
        "\n",
        "print(\"\\nTop 10 Books with the rating of 4 and above\") #just to see if it is actually there\n",
        "print(top_10_books[[\"book_name\" , \"book_average_rating\"]])\n",
        "print(\"The data has been cleaned, with everything needed and saved\")"
